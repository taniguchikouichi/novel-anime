<div class= "container">
    <% if flash[:user] %>
        <h5 class="alert alert-success"><%= flash[:user] %></h5>
    <% end %>
    <br>
    <div>
        <h2 class="title">ユーザー一覧</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <table class= "table">
                <% @users.each do |user| %>
                    <tr>
                        <th>
                            <%= user.name %>
                        </th>
                        <th>
                            <%= link_to "編集画面へ", edit_admin_user_path(user) %>
                        </th>
                    </tr>
                <% end %>
            </table>
        </div>
        <div class="col-md-3">
        </div>
    </div>
    <div class="pagination">
        <%= paginate @users %>
    </div>
</div>
